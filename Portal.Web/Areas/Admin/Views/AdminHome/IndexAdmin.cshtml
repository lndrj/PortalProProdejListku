@{
	ViewData["Title"] = "Administrátorská část";
}
<div class="container mt-5">
	<div class="row">
		<div class="col-md-6">
			<h1 class="text-start">@ViewData["Title"]</h1>
		</div>
		<div class="col-md-6 text-end">
			<h5 class="mt-2 pt-2">Uživatel: </h5>
		</div>
	</div>

	<div class="row mt-3">
		<div class="col-md-12">
			<h4>Přehled databází</h4>
		</div>
	</div>

	<div class="row mt-4">
		<div class="col-md-6 col-lg-6">
			<a class="card-link" asp-area="Admin" asp-controller="Akce" asp-action="Akce">
				<div class="card mb-4">
					<div class="card-body text-center">
						<h3 class="card-title">Akce</h3>
						<p class="card-text">Přejít do databáze akcí</p>
					</div>
				</div>
			</a>
		</div>

		<div class="col-md-6 col-lg-6">
			<a class="card-link" asp-area="Admin" asp-controller="Accounts" asp-action="Accounts">
				<div class="card mb-4">
					<div class="card-body text-center">
						<h3 class="card-title">Uživatelé</h3>
						<p class="card-text">Přejít do databáze uživatelů</p>
					</div>
				</div>
			</a>
		</div>

		<div class="col-md-6 col-lg-6">
			<a class="card-link" asp-area="Admin" asp-controller="Discussion" asp-action="Discussion">
				<div class="card">
					<div class="card-body text-center">
						<h3 class="card-title">Diskuze</h3>
						<p class="card-text">Přejít do databáze diskuzí</p>
					</div>
				</div>
			</a>
		</div>

		<div class="col-md-6 col-lg-6">
			<a class="card-link" asp-area="Admin" asp-controller="Requests" asp-action="Requests">
				<div class="card">
					<div class="card-body text-center">
						<h3 class="card-title">Požadavky</h3>
						<p class="card-text">Přejít do databáze požadavků</p>
					</div>
				</div>
			</a>
		</div>
	</div>


</div>
