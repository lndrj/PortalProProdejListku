@model IList<Account>

@{
    ViewData["Title"] = "Databáze Účtů";
}
<h1>@ViewData["Title"]</h1>

@{
    if (Model != null && Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@nameof(Account.Id)</th>
                    <th scope="col">@nameof(Account.FirstName)</th>
                    <th scope="col">@nameof(Account.LastName)</th>
                    <th scope="col">@nameof(Account.Email)</th>
                    <th scope="col">@nameof(Account.PhoneNumber)</th>
                    <th scope="col">@nameof(Account.IsAdmin)</th>
                    <th scope="col">@nameof(Account.DateCreated)</th>
                    <th scope="col">Delete</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; ++i)
                {
                    <tr>
                        <th scope="row">@Model[i].Id</th>
                        <td>@Model[i].FirstName</td>
                        <td>@Model[i].LastName</td>
                        <td>@Model[i].Email</td>
                        <td>@Model[i].PhoneNumber</td>
                        <td>@Model[i].IsAdmin</td>
                        <td>@Model[i].DateCreated</td>
                        <td><a asp-action="Delete" asp-route-Id="@Model[i].Id" onclick="return ConfirmDelete();" class="btn btn-danger">Delete</a></td>
                        <td><a asp-action="Edit" asp-route-Id="@Model[i].Id" class="btn btn-warning">Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}