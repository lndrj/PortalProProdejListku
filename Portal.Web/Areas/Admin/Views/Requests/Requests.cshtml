@model IList<AdminRequest>

@{
    ViewData["Title"] = "Požadavky na Adminy";
}

<h1>@ViewData["Title"]</h1>

@{
    if (Model != null && Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@nameof(AdminRequest.Id)</th>
                    <th scope="col">@nameof(AdminRequest.Request)</th>
                    <th scope="col">@nameof(AdminRequest.Solved)</th>
                    <th scope="col">Delete</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; ++i)
                {
                    <tr>
                        <th scope="row">@Model[i].Id</th>
                        <td>@Model[i].Request</td>
                        <td>@Model[i].Solved</td>
                        <td><a asp-action="Delete" asp-route-Id="@Model[i].Id" onclick="return ConfirmDelete();">Delete</a></td>
                        <td><a asp-action="Edit" asp-route-Id="@Model[i].Id">Change status</a></td>
                    </tr>
                }
            </tbody>
        </table>

    }
}

@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}