@model IList<Diskuze>

@{
    ViewData["Title"] = "Databáze Diskuzí";
}

<h1>@ViewData["Title"]</h1>

@{
    if (Model != null && Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@nameof(Diskuze.Id)</th>
                    <th scope="col">@nameof(Diskuze.UserID)</th>
                    <th scope="col">@nameof(Diskuze.AkceID)</th>
                    <th scope="col">@nameof(Diskuze.Komentar)</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; ++i)
                {
                    <tr>
                        <th scope="row">@Model[i].Id</th>
                        <td>@Model[i].UserID</td>
                        <td>@Model[i].AkceID</td>
                        <td>@Model[i].Komentar</td>
                        <td><a asp-action="Delete" asp-route-Id="@Model[i].Id" onclick="return ConfirmDelete();" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>

    }
}

@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}