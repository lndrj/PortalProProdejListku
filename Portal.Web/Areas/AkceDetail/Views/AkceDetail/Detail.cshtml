@model Akce


<section class="py-5">
	<div class="container px-4 px-lg-5 my-5">
		<div class="row gx-4 gx-lg-5 align-items-center">
			<!-- Obrázek produktu -->
			<div class="col-md-6">
				<img class="card-img-top mb-5 mb-md-0" src="@Model.ImageSrc" alt="..." />
			</div>
			<!-- Detaily produktu -->
			<div class="col-md-6">
				<h1 class="display-5 fw-bolder">@Model.Name</h1>
				<div class="fs-5 mb-3">
					<span>@Model.Price</span>
				</div>
				<p class="lead">@Model.Description</p>
				<div class="d-flex">
					<a class="btn btn-success mt-auto" onclick="Buy(@Model.Id,'@Url.Action(nameof(CustomerOrderCartController.AddOrderItemsToSession),
																		nameof(CustomerOrderCartController).Replace(nameof(Controller), String.Empty),
																		new { Area = nameof(Portal.Web.Areas.Customer) })',
																													'#total_price',
																													'@System.Globalization.CultureInfo.CurrentCulture.Name')">
						Přidat do košíku
					</a>
				</div>
			</div>
		</div>
	</div>
</section>


@section Scripts
{
	<environment include="Development">
		<script src="~/js/product.js"></script>
	</environment>
}